@model EditViewModel

<div>
    <h2 xmlns="http://www.w3.org/1999/html">Edit Profile</h2>
</div>
<div>
    <form asp-action="Edit" asp-controller="MyProfile" method="post">

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TFN">Tax File Number(TFN)</label>
            <input asp-for="TFN" class="form-control"/>
            <span asp-validation-for="TFN" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control"/>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City">City</label>
            <input asp-for="City" class="form-control"/>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="State" class="control-label"></label>
            <select asp-for="State" asp-items="@(new SelectList(Model.States, "Key", "Value"))" class="form-control">
                <option value="">Please select a state</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="PostCode">PostCode</label>
            <input asp-for="PostCode" class="form-control"/>
            <span asp-validation-for="PostCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Mobile">Mobile</label>
            <input asp-for="Mobile" class="form-control"/>
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
        <br/>
        <input type="submit" value="Save Changes" class="btn btn-primary"/>
    </form>
    
    <a asp-action="Index" asp-controller="MyProfile">Back to My Profile</a>
</div>