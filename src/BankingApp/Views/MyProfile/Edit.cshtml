@model Customer

<h2>Edit Profile</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CustomerID" />
    
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    
     <div class="form-group">
         <label asp-for="TFN">Tax File Number(TFN)</label>
         <input asp-for="TFN" class="form-control" />
     </div>   
    
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>    
    
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
    </div>    
 
    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" State="form-control" />
    </div>    
    
    <div class="form-group">
        <label asp-for="PostCode">PostCode</label>
        <input asp-for="PostCode" class="form-control" />
    </div>    
    
    <div class="form-group">
        <label asp-for="Mobile">Mobile</label>
        <input asp-for="Mobile" class="form-control" />
    </div>    
    

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

      
<a asp-action="Edit" asp-controller="MyProfile">Edit Profile</a>