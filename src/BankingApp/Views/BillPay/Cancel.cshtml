@model BillPay


<h1>Cancel Payment</h1>

<h3>Are you sure you want to cancel this scheduled payment?</h3>
<div>
    <h4>Payment Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillPayID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillPayID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduleTimeUtc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduleTimeUtc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Period)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Period)
        </dd>

    </dl>
        <form asp-action="CancelConfirmed">
            <input type="hidden" asp-for="BillPayID" />
            <input type="submit" value="Cancel" class="btn btn-danger" /> |
            <a asp-action="Index">Back to BillPay</a>
        </form>
</div>
